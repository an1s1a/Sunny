<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_location"
        android:inputType="textCapWords"
        android:key="@string/pref_location_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_location" />

    <ListPreference
        android:key="@string/pref_temperature_units_key"
        android:title="@string/pref_temperature_units"
        android:dialogTitle="@string/pref_temperature_units"
        android:entries="@array/pref_array_temperature_units"
        android:entryValues="@array/pref_temperature_units_values"
        android:defaultValue="@string/pref_units_metric"/>

</PreferenceScreen>
