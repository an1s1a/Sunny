<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunny.NoTitle</item>
    </style>

    <!--Style for MainActivity-->
    <style name="ActionBar.Solid.Sunny.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!--Style for Settings Activity-->
    <style name="SettingsTheme" parent="AppTheme">

    </style>

    <style name="ForecastListStyle">
        <!-- Lo stile sarÃ  diverso a seconda del valore di width per gli schermi -->
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

</resources>
